{% extends "layout.njk" %}

{% block head %}
    <title>Brain's - Students</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">

        <div class="header">
            <a href="/students/create">Novo</a>
            <form action="/students" autocomplete="off" method="get">
                <input 
                    type="text"
                    name="filter" 
                    placeholder="Nome ou Acompanhamento"
                    value="{{ filter }}">
                <button type="submit">Filtrar</button>
            </form>
        </div>

        <table width="100%">
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Email</th>
                    <th>Ano Escolar</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ student.avatar_url }})"></span>
                            {{ student.name }}
                        </td>
                        <td>{{ student.email }}</td>
                        <td>{{ student.schooling }}</td>
                        <td><a href="/students/{{ student.id }}">Exibir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="pagination"
            data-total={{pagination.total}}
            data-page={{pagination.page}}
            data-filter={{filter}}
        ></div>

    </div>
{% endblock content %}