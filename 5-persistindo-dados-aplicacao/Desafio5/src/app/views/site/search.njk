{% extends "site/layout.njk" %}

{% block head %}
    <title>Foodfy Â® | Busca</title>
{% endblock %}

{% block content %}

    <div class="container">
        <h2>Busca por "{{filter}}"</h2>
        <section class="cards">

            {% for item in items %}

                <div class="card">

                    <div class="card-img">
                        <img src="{{ item.image }}" alt="Imagem de {{ item.title }}">
                    </div>
                    <div class="card-info">
                        <p class="name">{{ item.title }}</p>
                        <p>por
                            {{ item.author }}</p>
                    </div>

                </div>

            {% endfor %}

        </section>

        <div class="pagination" 
        data-page={{pagination.page}} 
        data-total={{pagination.total}}
        data-filter={{filter}}></div>
    </div>

    <script src="/scripts.js"></script>
{% endblock content %}