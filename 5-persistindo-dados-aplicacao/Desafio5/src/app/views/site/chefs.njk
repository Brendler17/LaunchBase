{% block content %}
    <div class="container">
        <section class="cards cards_chef">

            {% for item in items %}

                <div class="card card_chef">

                    <div class="card-img card-img_chef">
                        <img src="{{ item.avatar_url }}" alt="Imagem de {{ item.name }}">
                    </div>

                    <div class="card-info card-info_chef">
                        <p class="name">{{ item.name }}</p>
                        <p class="info">{{ item.total_recipes }} {%if item.total_recipes == 1%} receita {%endif%} {%if item.total_recipes != 1 %} receitas {% endif %}</p>
                    </div>

                </div>

            {% endfor %}
        </section>

    </div>
{% endblock content %}