{% extends "site/layout.njk" %}

{% block head %}
    <title>Foodfy ® | {{ item.title }}</title>
{% endblock %}

{% block content %}    
<div class="container">

    <div class="card_unic">

        <div class="card_unic-img">
            <img src="{{ item.image }}" alt="imagem de {{ item.title }}">
        </div>

        <div class="card_unic-info">
            <p class="name">{{ item.title }}</p>
            <p class="info">por {{ item.author }}</p>
        </div>

        <div class="card_unic-content">

            <div class="card_unic-ing">
                <div class="ing-funct">
                    <h3>Ingredientes</h3>
                    <p class="show-ing">Esconder</p>
                </div>
                <ul class="active">
                    {% for ingredient in item.ingredients %}
                        <li>- {{ ingredient }}</li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="card_unic-method">
                <div class="met-funct">
                    <h3>Método de Preparo</h3>
                    <p class="show-met">Esconder</p>
                </div>
                <ul class="active">
                    {% for step in item.steps %}
                        <li>- {{ step }}</li>
                    {% endfor %}
                </ul>
            </div>
            
            <div class="card_unic-additional">
                <div class="add-funct">
                    <h3>Informações Adicionais</h3>
                    <p class="show-add">Esconder</p>
                </div>
                <ul class="active">
                    <li>{{ item.information }}</li>
                </ul>
            </div>
        
        </div>
    </div>                  
</div>

<script src="/scripts.js"></script>
{% endblock %}