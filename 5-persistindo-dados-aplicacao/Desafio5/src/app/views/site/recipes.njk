{% extends "site/layout.njk" %}

{% block head %}
    <title>Foodfy Â® | Receitas</title>
{% endblock %}

{% block content%}
    <div class="container">

        <section class="cards">

            {% for item in items %}

                <div class="card">
                    <div class="card-img">
                        <a href="/recipes/{{item.id}}">
                            <img src="{{ item.image }}" alt="imagem de {{ item.title }}">
                        </a>
                    </div>
                    <div class="card-info">
                        <p class="name">{{ item.title }}</p>
                        <p class="info">por
                            {{ item.author }}</p>
                    </div>
                </div>

            {% endfor %}

        </section>

        <div class="pagination" 
        data-page={{pagination.page}}
        data-total={{pagination.total}} 
        data-filter={{filter}}></div>

    </div>

   <script src="/scripts.js"></script>

{% endblock %}