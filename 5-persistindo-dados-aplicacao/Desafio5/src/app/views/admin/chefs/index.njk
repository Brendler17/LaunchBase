{% extends "admin/layout.njk" %}

{% block content %}
    <div class="container">
        <section class="head">
            <h2>Gerenciar Chefs</h2>
            <a href="/admin/chefs/create">Novo Chef</a>
        </section>

        <section class="cards cards_chef">

            {% for item in items %}

                <div class="card card_chef">

                    <div class="card-img card-img_chef">
                        <img src="{{ item.avatar_url }}" alt="Imagem de {{ item.name }}">
                    </div>

                    <div class="card-info card-info_chef">
                        <p class="name">{{ item.name }}</p>
                        <a href="chefs/{{item.id}}">Visualizar</a>
                    </div>

                </div>

            {% endfor %}
        </section>
    </div>
{% endblock content %}