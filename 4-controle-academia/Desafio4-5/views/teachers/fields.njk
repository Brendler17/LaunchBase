<div class="item">
    <div>Avatar URL</div>
    <input 
        type="url" 
        name="avatar_url"
        placeholder="https://"
        value="{{ teacher.avatar_url }}"
    >
</div>

<div class="item">
    <div>Nome Completo</div>
    <input 
        type="text" 
        name="name"
        placeholder="Nome do professor"
        value="{{ teacher.name }}"
    >
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <input 
        type="date" 
        name="birth"
        value="{{ teacher.birth }}"
    >
</div>

<div class="item">
    <div>Grau de Escolaridade</div>
    <select name="schooling">
        <option 
            value="EM"
            {% if teacher.schooling == "EM" %}
                selected
            {% endif %}
            >Ensino Médio Completo
        </option>
        <option 
            value="ES"
            {% if teacher.schooling == "ES" %}
                selected
            {% endif %}
            >Ensino Superior Completo
        </option>
        <option 
            value="M"
            {% if teacher.schooling == "M" %}
                selected
            {% endif %}
            >Mestrado
        </option>
        <option
            value="D"
            {% if teacher.schooling == "D" %}
                selected
            {% endif %}
            >Doutorado
        </option>
    </select>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <span>
        <input 
            type="radio" 
            name="class_type" 
            value="P" 
            {% if teacher.class_type == "P" %}
                checked
            {% endif %}
        >Presencial
    </span>
    <span>
        <input 
            type="radio" 
            name="class_type" 
            value="D"
            {% if teacher.class_type == "D" %}
                checked
            {% endif %}
        >Distância
    </span>
</div>

<div class="item">
    <div>Área de Atuação</div>
    <div>
        <input 
            type="text" 
            name="subjects" 
            placeholder="Matérias (separadas por vírgula)"
            value="{{ teacher.subjects }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>