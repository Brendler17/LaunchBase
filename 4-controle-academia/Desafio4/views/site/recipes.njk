{% block content%}
<div class="container">

    <section class="cards">
        
        {% for item in items %}

            <div class="card">
                <div class="card-img">
                    <img src="{{ item.image }}" alt="imagem de {{ item.title }}">
                </div>
                <div class="card-info">
                    <p class="name">{{ item.title }}</p>
                    <p class="info">por {{ item.author }}</p>
                </div>
            </div> 

        {% endfor %}         
                
    </section>   

</div>
    
{% include "site/script.njk" %}

{% endblock %}