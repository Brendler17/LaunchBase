{% extends "admin/layout.njk" %}

{% block head %}
{% endblock head %}

{% block content %}
    <div class="container">
            
        <section class="head">
            
            <h2>Editando Receita</h2>
            <form id="form-delete" method="post" action="/admin/recipes?_method=DELETE">
                <input type="hidden" name="index" value="{{ item.index }}">
                <button class="delete-button" type="submit">Deletar</button>
            </form>

        <form method="post" autocomplete="off" action="/admin/recipes?_method=PUT">
            
                <button type="submit">Salvar Receita</button>

            </section>
        
            <section class="items-form">     
        
                {% include "admin/fields.njk" %}

                <input type="hidden" name="index" value="{{ item.index }}">
        
            </section>
        </form>
    </div>

    {% include "admin/dinamic.njk" %}
    {% include "admin/confirmation.njk" %}

{% endblock content %}